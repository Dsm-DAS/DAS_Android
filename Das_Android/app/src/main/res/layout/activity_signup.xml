<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.Signup">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/img_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="102dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="가입"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="28dp"
        android:layout_height="32dp"
        android:text="ID"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="322dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp">
        <EditText
            android:id="@+id/id_edit"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:background="@null"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="417dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="6~20글자 이내"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="73dp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="322dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp">

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:background="@null"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="417dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="322dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp">

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:background="@null"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="417dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="322dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp">

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:background="@null"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="417dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:text="8~20자 이내, 알파벳 대문자,\특수문자 1자를 포함해야 합니다"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <Spinner
        android:id="@+id/grade"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/classes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/classes"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="155dp" />

    <Spinner
        android:id="@+id/class_num"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/classes"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="322dp"
        android:layout_height="44dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="#FFCCDE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes"
        android:layout_marginTop="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:text="가입"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>